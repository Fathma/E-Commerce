
<div class="container-fluid" style="width:80%;min-height: 700px">
    {{# if products}}
    <h1 style="margin-left: auto; margin-right: auto; ">{{category}}</a></h1>
    <div class="row">
        {{!-- Filter option shows --}}
        <div class="col-sm-3 ">
            <Div class="well">
                <form action="">
                    <label for="category">Model</label>
                    <input type="text" name="category" class="form-control" list="cat" value="{{model}}"
                        placeholder="Product's type">
                    <datalist id="cat">
                        {{# each gfh}}
                        <option value="{{this}}">
                        {{/each}}
                    </datalist>
                    <br>
                    <label for="category">Color</label>
                    <input type="text" name="category" class="form-control" list="cat" value="{{color}}"
                        placeholder="Product's type">
                    <datalist id="cat">
                        {{# each fgh}}
                        <option value="{{this}}">
                        {{/each}}
                    </datalist>
                    <br>
                    <label for="category">Price</label>
                    <input type="text" name="category" class="form-control" list="cat" value="{{category}}"
                        placeholder="Product's type">
                    <datalist id="cat">
                        {{# each fgh}}
                        <option value="{{this}}">
                        {{/each}}
                    </datalist>
                    <br>
                     <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </Div>



        </div>

        {{!-- products shows --}}
        <div class="col-sm-9 ">
            {{# each products }}
            <div class="row">

                {{# each this}}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" style="height: 340px">
                        <a href="/singleProduct/{{ this._id }}"><img style="height: 200px" class="img-responsive" src="data:image/png;base64,{{ this.imagePath }}" alt="{{ this.imagePath }}"></a>
                        <div class="caption">
                            <h3>{{ this.title}}</h3>
                         
                            <div class="clearfix">
                                <div class="price pull-left">{{ this.price }} TK</div>
                                <a href="/singleProduct/{{ this._id }}" class="btn btn-default pull-right" role="button">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
     {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in found</h2>
        </div>
    </div>
    {{/if}}
</div>