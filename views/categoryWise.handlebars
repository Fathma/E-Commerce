<div class="container-fluid" style="width:80%;min-height: 700px">
    {{# if products}}
    <h1 style="margin-left: auto; margin-right: auto; "></a></h1>
    <div class="row">
        {{!-- Filter option shows --}}
        <div class="col-sm-3 ">
            <Div class="well">
                <form action="/products/filter/{{category}}" method="POST">

                    <input type="hidden" name="number" value="{{number}}">

                    <div class="form-group">

                        <label for="brand">Brand</label>
                        <select class="form-control" data-style="btn-info" name="brand">
                            <option name="" value="0">Select table</option>
                            {{# each brand }}
                            <option name="{{this}}" value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price">Price Range</label>
                        <select name="price" class="form-control">
                            <option value="0">Select One</option>
                            <option value="0-10001">0 - 10,000</option>
                            <option value="10000-20001">10,000-20,000</option>
                            <option value="20000-30001">20,000-30,000</option>
                            <option value="30000-40001">30,000-40,000</option>
                            <option value="40000-50001">40,000-50,000</option>
                            <option value="50000-60001">50,000-60,000</option>
                            <option value="60000-70001">60,000-70,000</option>
                        </select>
                    </div>

                    {{# each dropdown_label}}
                    <div class="form-group">

                        <label for="v{{@index}}">{{this.label}}</label>
                        <select class="form-control" data-style="btn-info" name="v{{@index}}" class="form-group">
                            <option name="" value="0">Select table</option>
                            {{# each this.values }}
                            <option name="{{this}}" value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>

                    </div>
                    {{/each}}

                    <button type="submit" class="btn btn-primary">submit</button>

                </form>
            </Div>
        </div>

        {{!-- products shows --}}
        <div class="col-sm-9 ">

            {{# each products }}
            <div class="row">

                {{# each this}}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" style="height: 340px">
                        <a href="/products/singleProduct/{{ this._id }}"><img style="height: 200px" class="img-responsive"
                                src="data:image/png;base64,{{ this.image }}" alt="{{ this.imagePath }}"></a>
                        <div class="caption">
                            <h3>{{ this.name}}</h3>

                            <div class="clearfix">
                                <div class="price pull-left">{{ this.price }} TK</div>
                                <a href="/products/singleProduct/{{ this._id }}" class="btn btn-default pull-right"
                                    role="button">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
            {{/each}}

        </div>
    </div>

    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in found</h2>
        </div>
    </div>
    {{/if}}
    
</div>