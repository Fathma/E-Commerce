<div class="box">
    <div class="register-logo">
        <a href="#"><b>Product</b>Registration</a>
    </div>

    <div class="box-body">
        <p class="login-box-msg">Register a new Product</p>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
                <div class="well">

                    <h3 class="text-center">{{category}} Registration</h3>
                    {{!-- start general --}}
                    <form action="/products/regiSave/{{category}}/{{num_feature}}" method="POST" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" placeholder="Product's name">
                        </div>
                        <div class="form-group">
                            <label for="list_price">List price</label>
                            <input type="number" name="list_price" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="salePrice">Sale Price</label>
                            <input type="number" name="salePrice" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="wholeSalePrice">Whole Sale Price</label>
                            <input type="number" name="wholeSalePrice" class="form-control" placeholder="">
                        </div>

                        <div class="form-group">
                            <label for="brand">Brand</label>
                            <input type="text" name="brand" list="brands" class="form-control">
                            <datalist id="brands">
                                {{# each brand}}
                                <option value="{{this.name}}">
                                    {{/each}}
                            </datalist>
                        </div>
                        <div class="form-group">
                            <label for="model">Model</label>
                            <input type="text" name="model" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="color">Color</label>
                            <input type="text" name="color" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="warranty">Warranty</label>
                            <input type="text" name="warranty" class="form-control" placeholder="">
                        </div>

                        {{# each features}}
                        <div class="form-group">
                            <input type="hidden" name="feature{{@index}}_label" value="{{this}}">
                            <label for="feature{{@index}}_value">{{this}}</label>
                            <input type="text" name="feature{{@index}}_value" class="form-control" placeholder="">
                        </div>
                        {{/each}}

                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea type="text" name="description" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="shippingInfo">Shipping Info</label>
                            <textarea type="text" name="shippingInfo" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="isActive">Activation Status</label>
                            <input type="text" name="isActive" list="isActives" class="form-control">
                            <datalist id="isActives">
                                <option value="1">
                                <option value="0">
                            </datalist>
                        </div>
                        <div class="form-group">
                            <label for="onSale">Sale Status</label>
                            <input type="text" name="onSale" list="onSales" class="form-control">
                            <datalist id="onSales">
                                <option value="1">
                                <option value="0">
                            </datalist>
                        </div>
                        <div class="form-group">
                            <label for="quantity_stock">Quantity Stock</label>
                            <input type="number" name="quantity_stock" class="form-control" placeholder="">
                        </div>

                        <div class="form-group">
                            <label for="imagePath">Image</label>
                            <input type="file" name="imagePath" accept="image/png, image/jpeg">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>