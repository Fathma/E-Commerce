<div class="container-fluid" style="width:100%;min-height: 700px">

    {{# if products}}
    <div class="row">
        <div class="col-sm-12 col-md-8 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2 ">
                            <strong>Image</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Title</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Stock</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Live</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>created date</strong>
                        </div>
                        <div class="col-md-2 pull-center">
                            <strong>Action</strong>
                        </div>
                    </div>
                </li>
                {{# each products}}

                <li class="list-group-item">

                    <div class="row">
                        <a href="/products/singleProduct/{{ this._id }}">
                        <div class="col-md-2 ">
                            <img style="height: 50px" class="img-responsive" src="data:image/png;base64,{{ this.image }}"
                                alt="{{ this.title}}">
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.name}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.quantity.stock}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.quantity.storeLive}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.created}}TK</strong>
                        </div>
                        <div class="col-md-2 ">
                            <a href="/products/stockEditPage/{{this._id}}"> <button class="btn btn-default " type="button">Edit</button></a>
                        </div>
                        </a>
                    </div>
                </li>
                {{/each }}

            </ul>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in found</h2>
        </div>
    </div>
    {{/if}}
</div>