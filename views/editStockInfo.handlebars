<div class="box">
    <div class="register-logo">
        <a href="#"><b>Product</b>Registration</a>
    </div>

    <div class="box-body">
        <p class="login-box-msg">Register a new Product</p>
        <div class="row">
            <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
                <div class="well">

                    <h3 class="text-center">{{category}} Registration</h3>
                    {{!-- start general --}}
                    <form action="/products/stockEdit/{{product.id}}" method="POST" >

                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" value="{{product.name}}" readonly>
                        </div>

                        <div class="form-group">
                            {{product.quantity.stock}}
                            <label for="description">stock</label>
                            <input type="number" name="stock" class="form-control" value="{{product.quantity.stock}}" >
                        </div>
                        <div class="form-group">
                            <label for="description">storelive</label>
                            <input type="number" name="storelive" class="form-control" value="{{product.quantity.storeLive}}">
                        </div>

                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>