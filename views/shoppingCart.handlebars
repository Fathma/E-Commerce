<div class="container-fluid" style="width:80%;min-height: 700px">
    {{# if products}}
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">
                            <strong>Selected Items</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Quantity</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Action</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Price</strong>
                        </div>

                    </div>
                </li>
                {{# each products}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">
                            <strong>{{this.item.title}}</strong>
                        </div>
                        <div class="col-md-3 ">
                            <a href="/reduce/{{this.item._id}}"> <button class="btn btn-default " type="button">-</button></a>
                            <strong>{{this.qty}}</strong>
                            <a href="/increase/{{this.item._id}}"> <button class="btn btn-default " type="button">+</button></a>
                        </div>

                        <div class="col-md-3 ">
                            <a href="/removeAll/{{this.item._id}}"> <button class="btn btn-default " type="button">Delete</button></a>
                        </div>
                        <div class="col-md-3 ">
                            <strong>{{this.price}}TK</strong>
                        </div>
                    </div>
                </li>
                {{/each }}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">
                            <strong>Total:</strong>
                        </div>
                        <div class="col-md-3 ">

                        </div>
                        <div class="col-md-3 ">

                        </div>
                        <div class="col-md-3 ">
                            <strong>{{totalPrice}}TK </strong>
                        </div>

                    </div>

                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <button type="button" class="btn btn-success"> Checkout</button>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in cart</h2>
        </div>
    </div>
    {{/if}}
</div>