<div class="container-fluid" style="width:80%;min-height: 700px">
    {{# if products}}
    <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">
                            <strong>Selected Items</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Quantity</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Price</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>Action</strong>
                        </div>
                    </div>
                </li>
                {{# each products}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">
                            <strong>{{this.item.title}}</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>{{this.qty}}</strong>
                        </div>
                        <div class="col-md-3 ">
                            <strong>{{this.price}}TK</strong>
                        </div>
                        <div class="col-md-3 ">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="/reduce/{{this.item._id}}">reduce by 1</a></li>
                                <li><a href="/removeAll/{{this.item._id}}">remove all</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
                {{/each }}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-3 ">

                        </div>
                        <div class="col-md-3 ">

                        </div>
                        <div class="col-md-3 ">
                            <strong>Total: {{totalPrice}}TK </strong>
                        </div>

                    </div>

                </li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <button type="button" class="btn btn-success"> Checkout</button>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in cart</h2>
        </div>
    </div>
    {{/if}}
</div>
