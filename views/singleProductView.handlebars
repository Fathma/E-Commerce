<div class="container-fluid" style="width:80%;min-height: 700px">
    <h1 style="margin: auto">{{category}}</a></h1>
    <div class="row">
        <div class="col-sm-1 ">
        </div>
        <div class="col-sm-6 ">
            <Div class="well" style="height: 600px; width: 100%">
                <img style="height: 100%; width: 100% " src="{{ product.imagePath }}" alt="{{ product.imagePath }}">
            </div>
        </div>
        <div class="col-sm-4 ">
            <Div class="well">
                <h2>{{ product.title }}</h2>
                <p class="description">Details:{{ product.description }}</p>
                <div class="clearfix">
                    <h3>Price: {{ product.price }} TK</h3>

                    <form action="/add-to-cart/{{ product._id }}" method="POST">
                        <div class="qoqo pull-left">
                            <label for="qoqo">
                                <h4>Quantity:</h4>
                            </label>
                            <input type="number" class="form-group" name="qoqo" min="1" value="1" style="width: 70px;">
                        </div>

                        <input class="btn btn-default pull-right" type="submit" value="Add to cart" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>