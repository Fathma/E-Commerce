<div class="container-fluid" style="width:80%;min-height: 700px">
    <h1 style="margin: auto">{{category}}</a></h1>
    <div class="row">
        <div class="col-sm-1 ">
        </div>
        <div class="col-sm-6 ">
            <Div class="well" style="height: 600px; width: 100%">
                <img style="height: 100%; width: 100% " src="{{ product.imagePath }}" alt="{{ product.imagePath }}">
            </div>
        </div>
        <div class="col-sm-4 ">
            <Div class="well">
                <h2>{{ product.title }}</h2>
                <p class="description">Details:{{ product.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">Price: {{ product.price }} TK</div>
                    <a href="/add-to-cart/{{ product._id }}" class="btn btn-default pull-right" role="button">Add to
                        Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>